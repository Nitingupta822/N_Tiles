# Flask Application Configuration
# Copy this file to .env and update with your actual values

# REQUIRED: Secret key for session management and CSRF protection
# Generate a strong random secret key using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Configuration
# For local development, SQLite is used by default
# For production (e.g., Render), set this to your database URL
# DATABASE_URL=postgresql://user:password@host:port/database

# Session Configuration
# Set to True in production when using HTTPS
SESSION_COOKIE_SECURE=False

# Session lifetime in seconds (default: 1800 = 30 minutes)
PERMANENT_SESSION_LIFETIME=1800

# Environment (development/production)
FLASK_ENV=development

# Security Headers (Flask-Talisman)
# Set to True in production to enforce HTTPS
FORCE_HTTPS=False
